                  <h4 class="m-t-0 m-b-20 header-title"><b>Map</b></h4>
                  <!-- <div id="gmaps-overlay" class="gmaps"></div> -->

                  <input id="pac-input" class="controls" type="text" placeholder="Search Box">
                  <div id="map"></div>
                  <%= f.hidden_field :latitude %>
