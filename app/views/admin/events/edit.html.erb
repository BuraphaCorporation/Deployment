<script>

  jQuery(document).ready(function() {

    var max_fields      = 10; //maximum input boxes allowed
    var wrapper         = $(".section-wrap"); //Fields wrapper
    var add_button      = $("#add-more-field"); //Add button ID
    var ticketName      = $(".ticket-name");
    var ticketPrice     = $(".ticket-price");
    var ticketDate      = $(".ticket-date");
    var ticketTime      = $(".ticket-time");

    var x = 1; //initlal text box count
    $(add_button).click(function(e){ //on add input button click
      e.preventDefault();
      if(x < max_fields){ //max input box allowed
        x++; //text box increment
        // $(wrapper).append('<div><input type="text" name="mytext[]"/><a href="#" class="remove_field">Remove</a></div>'); //add input box

        $(wrapper).clone().appendTo($('.section'));

        picker_init();
      }
    });

    $(wrapper).on("click",".remove_field", function(e){ //user click on remove text
      e.preventDefault(); $(this).parent('div').remove(); x--;
    })

    picker_init();
  });

  function picker_init(){
    jQuery('.event-datepicker').datepicker({
      autoclose: true,
      format: "dd/mm/yyyy",
      todayHighlight: true
    });

    jQuery('.event-timepicker').timepicker({
      showMeridian : false,
      minuteStep : 15
    });
  }

</script>

