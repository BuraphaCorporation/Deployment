<!-- Gmaps file -->
<%= javascript_include_tag 'gmaps/gmaps.min', 'data-turbolinks-track' => true %>
<script type="text/javascript">

!function($) {
  "use strict";

  var GoogleMap = function() {};

  //creates map with overlay
  GoogleMap.prototype.createWithOverlay = function ($container) {
    var map = new GMaps({
      div: $container,
      zoom: 16,
      lat: 13.7563309,
      lng: 100.50176510000006,
      click: function(e) {
        map.removeMarkers()
        map.addMarker({
          lat: map.getCenter().lat(),
          lng: map.getCenter().lng(),
          draggable: true
        });
      },
    });

    $('#search-geolocation').on('click', function(){
      GMaps.geolocate({
        success: function(position) {
          map.setCenter(position.coords.latitude, position.coords.longitude);
        },
        error: function(error) {
          alert('Geolocation failed: '+error.message);
        },
        not_supported: function() {
          alert("Your browser does not support geolocation");
        },
        always: function() {
          // alert("Done!");
        }
      });
    });

    $('#search-map').on('click', function(){
      GMaps.geocode({
        address: $('#location-address').val().trim(),
        callback: function(results, status){
          if(status=='OK'){
            var latlng = results[0].geometry.location;
            map.setCenter(latlng.lat(), latlng.lng());
            map.removeMarkers()
            map.addMarker({
              lat: map.getCenter().lat(),
              lng: map.getCenter().lng(),
              draggable: true
            });
          }
        }
      });
    });

    return map;
  },

  //init
  GoogleMap.prototype.init = function() {
    var $this = this;
    $(document).ready(function(){
      //with sample markers
      $this.createWithOverlay('#gmaps-overlay');
    });
  },

  //init
  $.GoogleMap = new GoogleMap, $.GoogleMap.Constructor = GoogleMap
}(window.jQuery),

//initializing
function($) {
  "use strict";
  $.GoogleMap.init()
}(window.jQuery);

</script>
