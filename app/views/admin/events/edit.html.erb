<div class="row">
  <div class="col-sm-12">
    <div class="card-box">
      <h4 class="m-t-0 m-b-30 header-title"><b>Fields validation</b></h4>


      <div class="row">
        <div class="col-lg-12 text-right">
          <button id="submitForm" type="submit" class="btn btn-primary waves-effect waves-light">
            Add
          </button>
          <button id="resetForm" type="reset" class="btn btn-default waves-effect waves-light m-l-5">
            Cancel
          </button>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-6">
          <h5><b>Validation type</b></h5>
          <p class="text-muted font-13 m-b-30">
            Your awesome text goes here.
          </p>
          <%= form_for @event, url: admin_events_path, medthod: :post, html: { class: 'form-horizontal group-border-dashed' } do |f| %>
            <div class="form-group">
              <%= f.label :organizer, class: 'col-sm-3 control-label' %>
              <div class="col-sm-6">
                <%= f.select :user, options_for_select(@users.collect{ |u| ["#{u.first_name} #{u.last_name}", u.id] }), {}, { class: 'form-control select2' } %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :title, class: 'col-sm-3 control-label' %>
              <div class="col-sm-6">
                <%= f.text_field :title, class: 'form-control', autofocus: true, required: true, placeholder: 'Type something'  %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :description, class: 'col-sm-3 control-label' %>
              <div class="col-sm-6">
                <%= f.text_area :description, class: 'form-control', rows: 3, required: true %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :price, class: 'col-sm-3 control-label' %>
              <div class="col-sm-6">
                <div class="input-group">
                  <%= f.text_field :price, class: 'form-control', rows: 3, required: true, placeholder: "Enter only numbers", "data-parsley-type": "number"%>
                  <span class="input-group-addon">.00</span>
                </div>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :from_to, class: 'col-sm-3 control-label' %>
              <div class="col-sm-6">
                <div class="input-group">
                  <%= f.text_field :from_to, class: 'form-control', autofocus: true, required: true, placeholder: "dd/mm/yyyy", id: "datepicker-autoclose", "date-format": "dd/mm/yyyy" %>
                  <span class="input-group-addon bg-primary b-0 text-white"><i class="ion-calendar"></i></span>
                </div>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :location, class: 'col-sm-3 control-label' %>
              <div class="col-sm-6">
                <%= f.text_field :location, class: 'form-control', autofocus: true, required: true, placeholder: 'Type something'  %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :category, class: 'col-sm-3 control-label' %>
              <div class="col-sm-6">
                <%= f.select :category, options_for_select(@categories.collect{ |c| [c.name, c.id] }), {}, { class: 'form-control select2' } %>
              </div>
            </div>

            <div class="card-box">
              <h4 class="m-t-0 m-b-20 header-title"><b>Location</b></h4>
              <div class="row form-group">
                <div class="col-sm-6">
                  <input type="search" class="form-control" id="location-address">
                </div>
                <div class="col-sm-6">
                  <a class="btn btn-primary waves-effect waves-light" id="search-map">Search</a>
                  <a class="btn btn-primary waves-effect waves-light" id="search-geolocation">Get location</a>
                </div>
              </div>
              <div id="gmaps-overlay" class="gmaps"></div>
            </div>
          <% end %>
        </div>

        <div class="col-lg-6">
          <h5><b>Cover Image</b></h5>
          <div class="row">
            <div class="col-md-12 portlets">
              <div class="m-b-30">
                <%= form_for @event, url: admin_event_upload_path(@event), multipart: true, html: { class: 'dropzone', id: 'dropzone' } do |f| %>
                  <%#= f.file_field 'picture' %>
                  <div class="fallback">
                    <!-- <input name="picture" type="file" multiple /> -->
                    <%= file_field_tag "images[]", type: :file, multiple: true %>
                  </div>
                <% end %>
                 
                <!-- <form action="#" class="dropzone" id="dropzone">
                  <div class="fallback">
                    <input name="file" type="file" multiple />
                  </div>
                </form> -->
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-12">
              <%= image_tag @event.cover(:medium) %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <% @event.event_attachments.each do |e|%>
                <%= image_tag e.media(:medium) %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


