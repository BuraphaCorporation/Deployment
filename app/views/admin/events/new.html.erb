<div class="row">
  <div class="col-sm-12">
    <div class="card-box">
      <h4 class="m-t-0 m-b-30 header-title"><b>Fields validation</b></h4>
      <div class="row">
        <div class="col-lg-12">
          <h5><b>Validation type</b></h5>
          <p class="text-muted font-13 m-b-30">
            Your awesome text goes here.
          </p>
          <%= form_for @event, url: admin_events_path, medthod: :post, html: { class: 'form-horizontal group-border-dashed' } do |f| %>
            <div class="form-group">
              <%= f.label :organizer, class: 'col-sm-3 control-label' %>
              <div class="col-sm-6">
                <%= f.select :user, options_for_select(@users.collect{ |u| ["#{u.first_name} #{u.last_name}", u.id] }), {}, { class: 'form-control select2' } %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :category, class: 'col-sm-3 control-label' %>
              <div class="col-sm-6">
                <%= f.select :category, options_for_select(@categories.collect{ |c| [c.name, c.id] }), {}, { class: 'form-control select2' } %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :title, class: 'col-sm-3 control-label' %>
              <div class="col-sm-6">
                <%= f.text_field :title, class: 'form-control', autofocus: true, required: true, placeholder: 'Type something'  %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :description, class: 'col-sm-3 control-label' %>
              <div class="col-sm-6">
                <%= f.text_area :description, class: 'form-control', rows: 3, required: true %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :corver_photo, class: 'col-sm-3 control-label' %>
              <div class="col-sm-6">
                <div class="form-control">
                  <%= f.file_field :cover, type: :file, required: true %>
                </div>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :attachments, class: 'col-sm-3 control-label' %>
              <div class="col-sm-6">
                <div class="form-control">
                  <%= f.file_field :attachments, type: :file, required: true, multiple: true %>
                </div>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :location, class: 'col-sm-3 control-label' %>
              <div class="col-sm-6">
                <%= f.text_field :location, class: 'form-control', autofocus: true, required: true, placeholder: 'ชื่อสถานที่, ถนน, ซอย'  %>
              </div>
            </div>

            <div class="row">
              <div class="col-sm-offset-2 col-sm-7">
                <div class="card-box">
                  <h4 class="m-t-0 m-b-20 header-title"><b>Map</b></h4>
                  <div id="gmaps-overlay" class="gmaps"></div>
                  <%= f.hidden_field :latitude %>
                  <%= f.hidden_field :longitude %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-sm-offset-2 col-sm-6">
                <a id="add-more-field" href="javascript:;" target="_self">Add more</a>
              </div>
            </div>

            <div class="form-group section">
              <div class="section-wrap clearfix">
                <%= f.label :ticket, class: 'col-sm-2 control-label' %>
                <div class="col-sm-2 ticket-name">
                  <%= f.text_field :ticket_name, multiple: true, class: 'form-control', placeholder: 'Ticket name', autofocus: true, required: true %>
                </div>
                <div class="col-sm-2 ticket-price">
                  <%= f.text_field :ticket_price, multiple: true, class: 'form-control', placeholder: 'Ticket price', autofocus: true, required: true, "data-parsley-type": "number", "data-parsley-maxlength": "7" %>
                </div>
                <div class="col-sm-2 ticket-date">
                  <%= f.text_field :ticket_date, multiple: true, class: 'form-control event-datepicker', autofocus: true, required: true, placeholder: "dd/mm/yyyy", "date-format": "dd/mm/yyyy" %>
                </div>
                <div class="col-sm-1 ticket-time">
                  <div class="input-group">
                    <div class="bootstrap-timepicker">
                      <%= f.text_field :ticket_time, multiple: true, class: 'form-control event-timepicker', autofocus: true, required: true, placeholder: "9:00" %>
                    </div>
                  </div>
                </div>
                <br>
                <br>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-12 text-right">
          <button id="submitForm" type="submit" class="btn btn-primary waves-effect waves-light">
            Sumit
          </button>
          <button id="resetForm" type="reset" class="btn btn-default waves-effect waves-light m-l-5">
            Cancel
          </button>
        </div>
      </div>
    </div>
  </div>
</div>


