<article class="content forms-page">
  <div class="title-block">
    <h3 class="title">
      Forms
    </h3>
    <p class="title-description"> Sample form elements </p>
  </div>

  <section class="section">
    <div class="row sameheight-container">
      <div class="col-md-12">
        <div class="card card-block sameheight-item">
          <div class="title-block">
<!--             <h3 class="title">
              Underlined Inputs
            </h3> -->
          </div>
          <form role="form">
          <%= form_for @user, url: edit_admin_user_path(@user) do |f| %>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :first_name, class: 'control-label' %>
                  <%= f.text_field :first_name, class: 'form-control underlined', autofocus: true  %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :last_name, class: 'control-label' %>
                  <%= f.text_field :last_name, class: 'form-control underlined', autofocus: true  %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :gender %>
                  <%= f.radio_button :gemder, :male %>
                  <%= label :gender, :male %>
                  <%= f.radio_button :gemder, :female %>
                  <%= label :gender, :female %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :birthday %>
                  <%= f.date_select :birthday %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :company, class: 'control-label' %>
                  <%= f.text_field :company, class: 'form-control underlined', autofocus: true  %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :interesting, class: 'control-label' %>
                  <%= f.text_field :interesting, class: 'form-control underlined', autofocus: true  %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label class="control-label">URL:</label>
                  <input type="text" class="form-control underlined" placeholder="https://domain.com">
                </div>
              </div>
              <div class="col-md-12">
                <div class="form-group">
                  <label class="control-label">Short description</label>
                  <textarea rows="3" class="form-control underlined"></textarea>
                </div>
              </div>
            </div>

