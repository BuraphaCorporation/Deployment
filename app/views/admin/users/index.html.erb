<%= render partial: "layouts/parts/nav" %>
<script>$('#organizer-nav #menu-user-list').addClass('active');</script>

<div class="section">
  <div class="container">
      <div class="row">
        <div class="col-xs-12 col-md-12">
          <div class="transaction-list">
            <div class="list-header">
              <h1 class="list-title">User list all (<%= @users.count %> users)</h1>
            </div>
            <div class="list-body table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <td>Name</td>
                    <td>Phone</td>
                    <td>Email</td>
                    <td>Facebook</td>
                    <td>Gender</td>
                  </tr>
                </thead>
                <tbody>
                  <% @users.each do |user| %>
                  <tr>
                    <td><%= "#{user.first_name} #{user.last_name}" %></td>
                    <td><%= user.phone %></td>
                    <td><%= user.email %></td>
                    <td><%= user.uid %></td>
                    <td><%= user.gender %></td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>
