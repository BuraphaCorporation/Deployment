<article class="content forms-page">
  <div class="title-block">
    <h3 class="title">
      Create User
    </h3>
  </div>

  <section class="section">
    <div class="row sameheight-container">
      <div class="col-md-12">
        <div class="card card-block sameheight-item">
          <%= form_for @user, url: admin_users_path, method: :post do |f| %>
            <div class="row">
              <div class="col-md-6">
                <%= f.label :email, class: 'control-label' %>
                <%= f.email_field :email, class: 'form-control underlined', autofocus: true  %>
              </div>
            </div>
            <br />
            <div class="row">
              <div class="col-md-6">
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                      <%= f.label :first_name, class: 'control-label' %>
                      <%= f.text_field :first_name, class: 'form-control underlined', autofocus: true  %>
                    </div>
                  </div>
                  <div class="col-md-12">
                    <div class="form-group">
                      <%= f.label :last_name, class: 'control-label' %>
                      <%= f.text_field :last_name, class: 'form-control underlined', autofocus: true  %>
                    </div>
                  </div>
                  <div class="col-md-12">
                    <div class="form-group">
                      <%= f.label :gender %>
                      <%= f.radio_button :gender, :male %>
                      <%= label :gender, :male %>
                      <%= f.radio_button :gender, :female %>
                      <%= label :gender, :female %>
                    </div>
                    <div class="form-group">
                      <%= f.label :birthday %>
                      <%= f.date_select :birthday, order: [:day, :month, :year], start_year: 1900 %>
                    </div>
                  </div>
                </div>
              </div>

              <div class="col-md-6">
                <%= image_tag @user.avatar(:medium), style: 'width: 300px; height: 200px;' %> <br />
                <%= f.label :avatar %>
                <%= f.file_field :avatar %>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :company, class: 'control-label' %>
                  <%= f.text_field :company, class: 'form-control underlined', autofocus: true  %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :url, class: 'control-label' %>
                  <%= f.text_field :url, class: 'form-control underlined', autofocus: true, placeholder: 'https://domain.com'  %>
                </div>
              </div>
              <div class="col-md-6 offset-6">
                <div class="form-group">
                  <%= f.label :interesting, class: 'control-label' %>
                  <%= f.text_field :interesting, class: 'form-control underlined', autofocus: true  %>
                </div>
              </div>
              <div class="col-md-12">
                <div class="form-group">
                  <%= f.label :short_description, class: 'control-label' %>
                  <%= f.text_area :short_description, class: 'form-control underlined', rows: 3 %>
                </div>
              </div>
              <div class="col-md-3 offset-9">
                <div class="form-group">
                  <%= f.submit "Submit", class: 'btn btn-block btn-primary' %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </section>
</article>
