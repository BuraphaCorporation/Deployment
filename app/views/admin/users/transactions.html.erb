<%= render partial: "layouts/parts/nav" %>
<script>$('#organizer-nav #menu-transaction-list').addClass('active');</script>

<div class="section">
  <div class="container">
      <div class="row">
        <div class="col-xs-12 col-md-12">
          <div class="transaction-list">
            <div class="list-header">
              <h1 class="list-title">Transaction list all (<%= @orders.count %> transactions)</h1>
            </div>
            <div class="list-body table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <td>Date Purchased</td>
                    <td>Code</td>
                    <td>Event</td>
                    <td>Customer</td>
                    <td>Contact Number</td>
                    <td>QTY</td>
                    <td>Type</td>
                    <td>Amount</td>
                    <td>created_at</td>
                  </tr>
                </thead>
                <tbody>
                  <% @orders.each do |order| %>
                  <tr>
                    <td><%= order.status %></td>
                    <td><%= order.code %></td>
                    <td><%= order.event.try(:title) %></td>
                    <td><%= "#{order.user.try(:first_name)} #{order.user.try(:last_name)}" %></td>
                    <td><%= order.user.try(:phone) %></td>
                    <td><%= order.tickets.try(:count) %></td>
                    <td><%= order.payment.try(:channel) %></td>
                    <td><%= convert_to_currency(order.payment.try(:to_amount)) %></td>
                    <td><%= order.created_at %></td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>
