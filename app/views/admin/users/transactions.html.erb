<%= render partial: "layouts/parts/nav" %>
<script>$('#organizer-nav #menu-transaction-list').addClass('active');</script>

<div class="section">
  <div class="container">
      <div class="row">
        <div class="col-xs-12 col-md-12">
          <div class="transaction-list">
            <div class="list-header">
              <h1 class="list-title">Transaction list all (<%= @orders.count %> transactions)</h1>
            </div>
            <div class="list-body table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <td>Date Purchased</td>
                    <td>Code</td>
                    <td>Event</td>
                    <td>Customer</td>
                    <td>Contact Number</td>
                    <td>QTY</td>
                    <td>Type</td>
                    <td>Amount</td>
                    <td>Created_at</td>
                    <td colspan="2"></td>
                  </tr>
                </thead>
                <tbody>
                  <% @orders.each do |order| %>
                  <tr>
                    <td><%= order.status %></td>
                    <td><%= order.code %></td>
                    <td><%= order.event.try(:title) %></td>
                    <td><%= "#{order.user.try(:first_name)} #{order.user.try(:last_name)}" %></td>
                    <td><%= order.user.try(:phone) %></td>
                    <td><%= order.tickets.try(:count) %></td>
                    <td><%= order.payment.try(:channel) %></td>
                    <td><%= convert_to_currency(order.payment.try(:to_amount)) %></td>
                    <td><%= order.to_created_at %></td>

                    <% if order.pending? || order.status.cancel? %>
                      <td colspan="2"><%= link_to "Approve", admin_manage_approve_path(order.id), method: :put %></td>
                    <% elsif order.paid? %>
                      <td><%= link_to "Cancel", admin_manage_cancel_path(order.id), method: :put %></td>
                      <td><%= link_to "Send Email", admin_manage_send_email_path(order.id), method: :post  %></td>
                    <% else %>
                      <td colspan="2"></td>
                    <% end %>
                  </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>
