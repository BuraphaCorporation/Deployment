                      <%# end %>
                    </h4>
                    <div class="meta date"><%= ticket.section.to_event_human %></div>
                    <div class="meta location"><%= ticket.event.location_name %></div>
                  </div>
                  <div class="info-footer">
                    <div class="row">
                      <div class="col-xs-12 col-md-7">
                        <span class="ticket-price">฿ <%= ticket.event.first_section.price %></span>
                        <span class="purchase-date">purchased on <%#= ticket.payment.purchased_status %></span>
                      </div>
                    </div>
                  </div>
                </div>
                -->
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
