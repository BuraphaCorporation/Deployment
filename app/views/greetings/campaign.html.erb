</script>
<script>
  window.addEventListener('vl_ready', function(e) {
    VL.openModal();
  }, false)
</script>
  <% elsif @selected_campaign == 'olive' %>
<script>
  (function(d, s, id, ucid) {
    var js, hd = d.getElementsByTagName("head")[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s);
