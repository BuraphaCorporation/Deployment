<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Daydash</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name= "category-id" content="<%= @category_id %>">
    <%= csrf_meta_tags %>
    <%= render partial: "layouts/parts/tracking" %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

    <%= stylesheet_link_tag 'daydash', media: 'all', 'data-turbolinks-track' => true %>

    <!-- Google Map -->
    <%= javascript_include_tag '//maps.googleapis.com/maps/api/js?key=AIzaSyBYyAbr0KMSO5pXyEqNYp9_c6KdbYb9P5A&libraries=places', 'data-turbolinks-track' => true, media: 'all' %>

    <%= javascript_include_tag 'daydash', 'data-turbolinks-track' => true %>
  </head>
  <body>
    <div id="fb-root"></div>
    <div id="wrapper">
      <div id="topbar">
        <nav class="navbar navbar-static-top">
          <div class="container">
            <div class="navbar-header">

              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar"><i class="icon icon-menu"></i></button>
              <% if current_user.present? %>
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#profile-navbar" aria-expanded="false" aria-controls="navbar">
                <div class="user-profile-photo" style="background-image: url(<%= current_user.picture(:medium) %>)"></div>
              </button>
              <% end %>

              <%= link_to root_path, class: 'navbar-brand', target: '_self' do %>
                <img src="/src/images/theme/logo.png" />
              <% end %>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
              <% if current_user.present? %>
              <ul class="nav navbar-nav navbar-right mobile-hide">
                  <% if current_user.can_organizer? %>
                  <li><%= link_to "Organizer", "/organizer", target: '_self' %></li>
                  <% end %>
                  <li class="dropdown user-dropdown">
                    <a href="/" target="_self" class="dropdown-toggle" data-toggle="dropdown" role="button">
                      <div class="user-profile-photo" style="background-image: url(<%= current_user.picture(:medium) %>"></div>
                      <div class="user-name"><%= current_user.first_name %></div>
                      <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu">
                      <li><%= link_to "My Tickets", client_profile_tickets_path(current_user) %></li>
                      <li><%= link_to "My Orders", client_profile_orders_path(current_user) %></li>
                      <!-- <li><a href="/profile/wishlist">Wish List</a></li> -->
                      <li><%= link_to "My Account", client_profile_settings_path(current_user) %></li>
                      <li>
                      <%= link_to 'Log Out', destroy_user_session_path, method: :delete %>
                      </li>
                    </ul>
                  </li>
                </ul>
                <% else %>
                <ul class="nav navbar-nav navbar-right">
                  <li><a id="menu-login" class="btn btn-daydash btn-daydash-green-2" data-toggle="modal" data-target="#login-modal" href="#login-modal">สมัครสมาชิกฟรี / เข้าสู่ระบบ</a></li>
                </ul>
                <% end %>
              </ul>
              <ul class="nav navbar-nav navbar-left">
                <li>
                  <%= link_to 'ALL', root_path, target: '_self' %>
                </li>

                <% @global_categories.each do |category| %>
                  <li>
                    <% if is_index_with_categories? %>
                      <%= link_to category.title, 'javascript:;', class: 'category-filter', 'data-filter': category.id %>
                    <% else %>
                      <a href="/categories/<%= category.slug %>" target="_self"><%= category.title %></a>
                    <% end %>
                  </li>
                <% end unless @global_categories.nil? %>
              </ul>
            </div>

            <% if current_user.present? %>
            <div id="profile-navbar" class="navbar-collapsse collapse">
              <ul class="nav navbar-nav mobile-only">
                <% if current_user.can_organizer? %>
                <li><%= link_to "Organizer", "/organizer", target: '_self' %></li>
                <% end %>
                <li><%= link_to "My Tickets", client_profile_tickets_path(current_user) %></li>
                <li><%= link_to "My Orders", client_profile_orders_path(current_user) %></li>
                <!-- <li><a href="/profile/wishlist">Wish List</a></li> -->
                <li><%= link_to "My Account", client_profile_settings_path(current_user) %></li>
                <li>
                <%= link_to 'Log Out', destroy_user_session_path, method: :delete %>
                </li>
              </ul>
            </div>
            <% end %>
          </div>
        </nav>
      </div>
      <div id="main">
        <!-- <div class="container">
          <div class="row">
            <div class="col-xs-12">
              <% flash.each do |key, value| %>
                <div class="alert alert-<%= key %>"><%= value %></div>
              <% end %>
            </div>
          </div>
        </div> -->
        <%= yield %>
      </div>
      <div id="footer">
        <div class="container">
          <div class="row">
            <div class="col col-xs-12 col-md-3">
              <div class="list-panel">
                <div class="list-title">Explore</div>
                <ul class="list-body nav">
                  <% @global_categories.each do |category| %>
                    <li>
                      <a href="/categories/<%= category.slug %>" target="_self"><%= category.title %></a>
                    </li>
                  <% end unless @global_categories.nil? %>
                </ul>
              </div>
            </div>
            <div class="col col-xs-12 col-md-3">
              <div class="list-panel">
                <div class="list-title">Support</div>
                <ul class="list-body nav">
                  <!-- <li><a href="/" target="_self">List Event on Daydash</a></li> -->
                  <li><a href="https://blog.daydash.co/" target="_blank">Daydashzine</a></li>
                  <li><a href="/about" target="_self">Our Story</a></li>
                  <!-- <li><a href="/" target="_self">How to Pay</a></li> -->
                  <!-- <li><a href="/" target="_self">FAQ</a></li> -->
                  <li><a href="/contact" target="_self">Contact</a></li>
                </ul>
              </div>
            </div>
            <div class="col col-xs-12 col-md-3">
              <div class="list-panel social-list">
                <div class="list-title">Connect</div>
                <ul class="list-body list-inline">
                  <li><a href="<%= "#{App.line_link}" %>" target="_blank"><i class="icon icon-line"></i></a></li>
                  <li><a href="<%= "#{App.facebook_link}" %>" target="_blank"><i class="icon icon-facebook"></i></a></li>
                  <li><a href="<%= "#{App.instagram_link}" %>" target="_blank"><i class="icon icon-instagram"></i></a></li>
                  <li><a href="<%= "#{App.twitter_link}" %>" target="_blank"><i class="icon icon-twitter"></i></a></li>
                </ul>
              </div>

              <div class="fb-page" data-href="https://www.facebook.com/daydashapp/" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true"><blockquote cite="https://www.facebook.com/daydashapp/" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/daydashapp/">Daydash</a></blockquote></div>
            </div>
            <div class="col col-xs-12 col-md-3">
              <div class="list-panel">
                <ul class="list-body list-inline">
                  <li><a href="/" target="_self"><img src="/src/images/theme/appstore.png" height="40" /></a></li>
                  <li><a href="/" target="_self"><img src="/src/images/theme/playstore.png" height="40" /></a></li>
                </ul>
              </div>

              <div>
                <div class="copyright">© 2016 Daydash.co</div>
                <ul class="list-body list-inline">
                  <li><a href="<%= terms_and_conditions_path %>">Terms &amp; Conditions</a></li>
                  <li><a href="<%= privacy_policy_path %>">Privacy Policy</a></li>
                </ul>
              </div>

              <div class="cert-list">
                <img src="/src/images/theme/comodo.png" height="30" />
                <img src="/src/images/theme/visa_master.png" height="30"/>
                <img src="/src/images/theme/mixpanel.png" height="30"/>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="modal fade" tabindex="-1" role="dialog" id="login-modal">
      <div class="modal-dialog modal-sm" role="document">
        <%= render partial: "layouts/parts/login-form" %>
        <%= render partial: "layouts/parts/register-form" %>
      </div>
    </div>
  </body>

<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.7&appId=259929777688738";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>
  <!-- Template -->
  <%= render partial: "layouts/parts/section" %>
</html>
