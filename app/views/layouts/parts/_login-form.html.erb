  <div id="login-form">
    <%= form_tag 'profile/login' do  %>
      <input type="hidden" name="continue" value="" />
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">Login</h4>
        </div>
        <div class="modal-body">
          <div class="fb-login">
            <a href="/auth/facebook"><img src="/src/images/theme/fb-login.png" height="40" /></a>
            <div class="seperator">
              <div class="inner">
                <span>OR</span>
              </div>
            </div>
          </div>
          <div class="form-group">
            <label>Your E-mail</label>
            <input class="form-control" type="email" name="email" value="" />
          </div>
          <div class="form-group">
            <label>Your Password</label>
            <input class="form-control" type="password" name="password" value="" />
          </div>
          <button class="btn btn-block btn-daydash btn-daydash-green-1">Login</button>
          <div class="forgot-password">
            <a href="#">Forgot Password?</a>
          </div>
        </div>
        <div class="modal-footer">
          <div>
            Don't have an account?
            <a href="#" onclick="$('#login-modal #login-form').hide(); $('#login-modal #register-form').show(); return false;">Register Free!</a>
          </div>
        </div>
      </div><!-- /.modal-content -->
    <% end %>
  </div>