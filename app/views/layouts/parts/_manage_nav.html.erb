<div class="section" id="organizer-header-section">
  <div class="container">
    <div class="section-header row">
      <div class="col-md-9 col-lg-10">
        <h3 class="event-title"><%= @event.title %> <div class="btn btn-daydash-status"><%= @event.status == 'published' ? 'Live' : 'Draft' %></div></h3>
        <p><%= @event.to_uptime %> at <%= @event.location_name %></p>
      </div>
      <div class="col-md-3 col-lg-2 text-right">
        <a href="<%= edit_organizer_event_path(@event) %>" class="btn btn-default">Edit</a>
        <a href="<%= client_event_path(@event) %>" target="_blank" class="btn btn-default">View Event</a>
      </div>
    </div>

    <ul class="nav nav-pills nav-daydash" id="<%= current_user.can_organizer? ? 'organizer-nav' : 'profile-nav' %>">
      <%= organizer_nav_link "Dashboard", dashboard_organizer_event_path(@event), 'organizer-event-nav-dashboard', 'icon-order' %>
      <%= organizer_nav_link "Orders", orders_organizer_event_path(@event), 'organizer-event-nav-orders', 'icon-order' %>
      <%= organizer_nav_link "Attendees", attendees_organizer_event_path(@event), 'organizer-event-nav-attendees', 'icon-edit' %>
      <%= organizer_nav_link "Check in", checkin_organizer_event_path(@event), 'organizer-event-nav-check-in', 'icon-checkin' %>
    </ul>
  </div>
</div>
