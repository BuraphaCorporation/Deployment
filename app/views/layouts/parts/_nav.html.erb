<div class="section" id="profile-nav-section">
  <div class="container">
    <div class="current-user-panel">
      <div class="profile-photo" style="background-image: url('<%= current_user.picture(:medium) %>');"></div>
      <% if current_user.can_organizer? %>
        <div class="user-name"><%= current_user.company %></div>
        <!-- <div class="role-badge organizer-badge">ORGANIZER</div> -->
      <% else %>
        <div class="user-name"><%= current_user.first_name %> <%= current_user.last_name %></div>
      <% end %>
    </div>

    <ul class="nav nav-pills nav-daydash" id="<%= current_user.can_organizer? ? 'organizer-nav' : 'profile-nav' %>">
      <% if current_user.can_organizer? %>
        <% if current_user.admin? %>
          <style>
            #profile-nav-section #profile-nav, #profile-nav-section #organizer-nav {
              width: auto;
            }
          </style>
          <li id="menu-user-list">
            <%= link_to "ALL USER", admin_manage_users_path %>
          </li>
          <li id="menu-transaction-list">
            <%= link_to "ALL Transaction", admin_manage_transactions_path %>
          </li>
        <% end %>
        <li id="menu-event-list">
          <%= link_to "Manage Event", organizer_events_path %>
        </li>
        <li id="menu-create-event">
          <%= link_to "Create New Event", new_organizer_event_path, "data-turbolinks" => false %>
        </li>
      <% else %>
        <li id="menu-my-tickets">
          <%= link_to "My Tickets", client_profile_tickets_path(current_user) %>
        </li>
        <li id="menu-my-orders">
          <%= link_to "My Orders", client_profile_orders_path(current_user) %>
        </li>
      <% end %>
      <li id="menu-settings">
        <%= link_to "My Account", client_profile_settings_path(current_user) %>
      </li>
    </ul>
  </div>
</div>
