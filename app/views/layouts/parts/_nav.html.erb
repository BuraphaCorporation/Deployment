<header id="topnav">
  <div class="topbar-main">
    <div class="container">
      <div class="logo">
        <%= link_to root_path, class: "logo" do %>
        <i class="md md-equalizer"></i> <span>Daydash</span>
        <% end %>
      </div>
      <div class="menu-extras">
        <ul class="nav navbar-nav navbar-right pull-right">
          <li>
            <form role="search" class="navbar-left app-search pull-left hidden-xs">
              <input type="text" placeholder="Search..." class="form-control">
              <a href=""><i class="fa fa-search"></i></a>
            </form>
          </li>

          <% if current_user %>
            <li class="dropdown">
              <a href="" class="dropdown-toggle waves-effect waves-light profile" data-toggle="dropdown" aria-expanded="true">
                <%= image_tag current_user.avatar(:medium), alt: 'user-img', class: 'img-circle' %>
              </a>
              <ul class="dropdown-menu">
                <!-- <li><a href="javascript:void(0)"><i class="ti-user m-r-5"></i> Profile</a></li> -->
                <!-- <li><a href="javascript:void(0)"><i class="ti-settings m-r-5"></i> Settings</a></li> -->
                <!-- <li><a href="javascript:void(0)"><i class="ti-lock m-r-5"></i> Lock screen</a></li> -->
                <!-- <li><a href="javascript:void(0)"><i class="ti-power-off m-r-5"></i> Logout</a></li> -->
                <li>
                  <%= link_to admin_path do %>
                  <i class="ti-user m-r-5"></i> Profile
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="ti-power-off m-r-5"></i> Logout
                  <% end %>
                </li>
              </ul>
            <% else %>
              <li><%= link_to "Sign Up", '#' %></li>
              <li><%= link_to "Sign In", '#', 'data-toggle': "modal", 'data-target': ".bs-example-modal-md" %></li>
            <% end %>
          </li>
        </ul>
        <div class="menu-item">
          <!-- Mobile menu toggle-->
          <a class="navbar-toggle">
            <div class="lines">
              <span></span>
              <span></span>
              <span></span>
            </div>
          </a>
          <!-- End mobile menu toggle-->
        </div>
      </div>
    </div>
  </div>

  <% if current_user.is_admin? %>
    <!-- End topbar -->
    <div class="navbar-custom">
      <div class="container">
        <div id="navigation">
          <ul class="navigation-menu">
            <li class="has-submenu">
              <%= link_to admin_path, target: '_self' do %>
              <i class="md md-dashboard"></i>Dashboard
              <% end %>
            </li>
            <li class="has-submenu">
              <%= link_to admin_events_path, target: '_self' do %>
              <i class="md md-event"></i>Event
              <% end %>
            </li>
            <li class="has-submenu">
              <%= link_to admin_users_path, target: '_self' do %>
              <i class="md md-person"></i>User
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    </div>
  <% end %>
</header>

<!-- Large modal -->
<!-- <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bs-example-modal-lg">Large modal</button> -->

<div class="modal fade bs-example-modal-md" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
  <div class="modal-dialog modal-md">
    <div class="modal-content">
      <%= render "users/shared/social" %>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal m-t-20' }) do |f| %>
        <div class="form-group">
          <div class="col-xs-12">
            <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Your email address', required: true %>
            <i class="md md-account-circle form-control-feedback l-h-34"></i>
          </div>
        </div>
        <div class="form-group">
          <div class="col-xs-12">
            <%= f.password_field :password, autocomplete: 'off', class: 'form-control', placeholder: 'Your password', required: true %>
            <i class="md md-vpn-key form-control-feedback l-h-34"></i>
          </div>
        </div>
        <div class="form-group">
          <div class="col-xs-12">
            <div class="checkbox checkbox-primary">
              <% if devise_mapping.rememberable? -%>
                <%= f.check_box :remember_me, id: 'checkbox-signup' %>
                <%= f.label :remember_me %>
              <% end -%>
            </div>
          </div>
        </div>
        <div class="form-group text-right m-t-20">
          <div class="col-xs-12">
            <button class="btn btn-primary btn-custom w-md waves-effect waves-light" type="submit">Log In</button>
          </div>
        </div>
        <div class="form-group m-t-30">
          <div class="col-sm-7">
              <%= render "users/shared/forgot_password" %>
          </div>
          <div class="col-sm-5 text-right">
              <%= render "users/shared/signup" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
