            <!-- <li><a href="/">FAQ</a></li> -->
            <!-- <li><a href="/contact">Contact</a></li> -->
          </ul>
        </div>
      </div>
      <div class="col col-xs-12 col-md-3">
        <div class="list-panel social-list">
          <div class="list-title">Connect</div>
          <ul class="list-body list-inline">
            <li>
              <%= link_to App.line_link, target: '_blank' do %>
                <i class="icon icon-line"></i>
              <% end %>
            </li>
            <li>
              <%= link_to App.facebook_link, target: '_blank' do %>
                <i class="icon icon-facebook"></i>
              <% end %>
            </li>
            <li>
              <%= link_to App.instagram_link, target: '_blank' do %>
                <i class="icon icon-instagram"></i>
              <% end %>
            </li>
            <li>
              <%= link_to App.twitter_link, target: '_blank' do %>
                <i class="icon icon-twitter"></i>
              <% end %>
            </li>
          </ul>
        </div>

        <div class="fb-page"
             data-href="https://www.facebook.com/daydashapp/"
             data-small-header="true"
             data-adapt-container-width="true"
             data-hide-cover="false"
             data-show-facepile="true">
        </div>
      </div>
