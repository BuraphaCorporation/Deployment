<div id="register-form" style="display: none;">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <input type="hidden" name="continue" value="" />
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Signup</h4>
      </div>
      <div class="modal-body">
        <div class="fb-login">
          <a href="/auth/facebook"><img src="/src/images/theme/fb-login.png" height="40" /></a>
          <div class="seperator">
            <div class="inner">
              <span>OR</span>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label>Firstname</label>
          <%= f.text_field :first_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <label>Lastname</label>
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <label>Your E-mail</label>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <label>Your Password</label>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <%= f.submit "Signup Free!", class: 'btn btn-block btn-thekanko btn-thekanko-green-1' %>
      </div>
      <div class="modal-footer">
        <div>
          Already have an account?
          <a href="#" onclick="$('#login-modal #login-form').show(); $('#login-modal #register-form').hide(); return false;">Login Here!</a>
        </div>
      </div>
    </div>
  <% end %>
</div>
