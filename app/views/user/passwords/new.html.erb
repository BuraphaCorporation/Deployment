
<div class="section" id="auth-section">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-3 col-md-6 col-sm-12">

        <h2>Forgot your password?</h2>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <div class="col-xs-12">
              <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Your email address', required: true %>
              <i class="md md-account-circle form-control-feedback l-h-34"></i>
            </div>
          </div>

          <!-- <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true %>
          </div> -->

          <div class="form-group">
            <div class="col-xs-12">
              <button class="btn btn-thekanko btn-thekanko-green-2 btn-block" type="submit">Send me reset password instructions</button>
            </div>
          </div>
        <% end %>

        <div class="form-group">
          <div class="col-sm-7">
            <%= render "user/shared/forgot_password" %>
          </div>
          <div class="col-sm-5 text-right">
            <%= render "user/shared/signup" %>
          </div>
        </div>
        <!-- <%= render "user/shared/links" %> -->
      </div>
    </div>
  </div>
</div>
