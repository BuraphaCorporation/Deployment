
<div class="section" id="auth-section">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-3 col-md-6 col-sm-12">
        <h2>Sign Up</h2>
        <br>
        <p>
          <center>
            <%= render "user/shared/social" %>
          </center>
        </p>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.label :first_name %>
            <%= f.text_field :first_name, autofocus: true, class: 'form-control underlined', placeholder: 'First Name', required: true %>
          </div>

          <div class="form-group">
            <%= f.label :last_name %>
            <%= f.text_field :last_name, autofocus: true, class: 'form-control underlined', placeholder: 'Last Name', required: true %>
          </div>

          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, class: 'form-control underlined', placeholder: 'Your email address', required: true %>
          </div>

          <div class="form-group">
            <%= f.label :password %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: 'off', class: 'form-control underlined', placeholder: 'Your password', required: true %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control underlined', placeholder: 'Confirm your password', required: true %>
          </div>

          <div class="form-group">
            <button class="btn btn-wadealike btn-wadealike-green-2 btn-block" type="submit">Sign up</button>
          </div>

          <div class="form-group">
            <p class="text-muted text-xs-center">Already have an account?
              <%= render "user/shared/signin" %>
            </p>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
