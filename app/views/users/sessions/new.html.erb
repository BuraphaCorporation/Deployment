
<div class="section" id="auth-section">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-3 col-md-6 col-sm-12">
        <h2>Login</h2>
        <br>
        <p>
          <center>
            <%= render "users/shared/social" %>
          </center>
        </p>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
          <div class="form-group">
            <div class="col-xs-12">
              <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Your email address', required: true %>
              <i class="md md-account-circle form-control-feedback l-h-34"></i>
            </div>
          </div>
          <div class="form-group">
            <div class="col-xs-12">
              <%= f.password_field :password, autocomplete: 'off', class: 'form-control', placeholder: 'Your password', required: true %>
              <i class="md md-vpn-key form-control-feedback l-h-34"></i>
            </div>
          </div>
          <div class="form-group">
            <div class="col-xs-12">
              <!-- <div class="checkbox checkbox-primary"> -->
                <% if devise_mapping.rememberable? -%>
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                <% end -%>
              <!-- </div> -->
            </div>
          </div>
          <div class="form-group text-right">
            <div class="col-xs-12">
              <button class="btn btn-daydash btn-daydash-green-2 btn-block" type="submit">Log In</button>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-7">
              <%= render "users/shared/forgot_password" %>
            </div>
            <div class="col-sm-5 text-right">
              <%= render "users/shared/signup" %>
            </div>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
